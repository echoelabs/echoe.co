---
interface Props {
  darkMode?: boolean;
}

const { darkMode = false } = Astro.props;

const textColor = darkMode ? "text-gray-400" : "text-gray-600";
const titleColor = darkMode ? "text-white" : "text-gray-900";
const hoverColor = darkMode ? "hover:text-white" : "hover:text-black";
const disabledColor = darkMode ? "text-gray-600 cursor-not-allowed" : "text-gray-300 cursor-not-allowed";
const bgClass = darkMode ? "bg-transparent border-none" : "bg-white border-t border-gray-100";
---

<footer id="contact" class={`${bgClass} px-3 sm:px-4 md:px-8 lg:px-16 pt-8 transition-colors duration-500`}>
  <div class="max-w-[90vw] lg:max-w-[1800px] xl:max-w-[2000px] 2xl:max-w-[2200px] mx-auto">
    <div class="flex flex-col gap-12 md:flex-row md:gap-8 md:justify-between mb-8">

      <!-- Brand Column -->
      <div class="md:max-w-sm">
        <span class={`font-display font-semibold text-base tracking-tight block mb-4 ${titleColor}`}>echoe</span>
        <p class={`${textColor} text-xs leading-relaxed mb-6`}>
          Building the operating system for the next generation of commerce.
          Simple, unified, and infinitely scalable.
        </p>
      </div>

      <!-- Links Container -->
      <nav aria-label="Footer navigation" class="grid w-full grid-cols-2 gap-x-6 gap-y-6 sm:grid-cols-4 sm:gap-6 md:flex md:w-auto md:flex-nowrap md:gap-12 lg:gap-20 xl:gap-32">

        <!-- Product Links -->
        <div>
          <p class={`font-medium mb-2 text-[11px] sm:mb-3 sm:text-xs ${titleColor}`}>Product</p>
          <ul class={`space-y-1.5 text-[11px] sm:space-y-2 sm:text-xs ${textColor}`}>
            <li><a href="/#demo" class={`${hoverColor} transition-colors`}>Simulation</a></li>
            <li><a href="/#features" class={`${hoverColor} transition-colors`}>Features</a></li>
            <li><a href="/pricing" class={`${hoverColor} transition-colors`}>Pricing</a></li>
          </ul>
        </div>

        <!-- Company Links -->
        <div>
          <p class={`font-medium mb-2 text-[11px] sm:mb-3 sm:text-xs ${titleColor}`}>Company</p>
          <ul class={`space-y-1.5 text-[11px] sm:space-y-2 sm:text-xs ${textColor}`}>
            <li><a href="mailto:hello@echoe.co" class={`${hoverColor} transition-colors`}>Contact</a></li>
            <li><span class={disabledColor}>Newsroom</span></li>
            <li><span class={disabledColor}>Press Kit</span></li>
          </ul>
        </div>

        <!-- Resources Links -->
        <div>
          <p class={`font-medium mb-2 text-[11px] sm:mb-3 sm:text-xs ${titleColor}`}>Resources</p>
          <ul class={`space-y-1.5 text-[11px] sm:space-y-2 sm:text-xs ${textColor}`}>
            <li><span class={disabledColor}>Help Center</span></li>
            <li><span class={disabledColor}>API Docs</span></li>
            <li><span class={disabledColor}>Status</span></li>
          </ul>
        </div>

        <!-- Legal Links -->
        <div>
          <p class={`font-medium mb-2 text-[11px] sm:mb-3 sm:text-xs ${titleColor}`}>Legal</p>
          <ul class={`space-y-1.5 text-[11px] sm:space-y-2 sm:text-xs ${textColor}`}>
            <li><a href="/terms" class={`${hoverColor} transition-colors`}>Terms</a></li>
            <li><a href="/privacy" class={`${hoverColor} transition-colors`}>Privacy</a></li>
            <li><a href="/cookie" class={`${hoverColor} transition-colors`}>Cookies</a></li>
            <li><a href="/refund" class={`${hoverColor} transition-colors`}>Refunds</a></li>
          </ul>
        </div>

      </nav>

    </div>

    <!-- Bottom Bar -->
    <div class="pt-4 pb-6 flex flex-col md:flex-row justify-between items-center gap-4">
      <div class={`text-[10px] ${textColor}`}>
        &copy; 2026 ECHO HQ CO., LTD. All rights reserved.
      </div>

      <div class="flex gap-6">
        <a href="mailto:hello@echoe.co" class={`text-[10px] ${textColor} ${hoverColor} transition-colors`}>hello@echoe.co</a>
      </div>
    </div>
  </div>
</footer>
